<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
           xsi:type="TaskPaneApp">

  <!-- Identificación única del add-in -->
  <Id>a1b2c3d4-e5f6-7890-abcd-ef1234567890</Id>

  <!-- Versión del add-in -->
  <Version>1.0.0.0</Version>

  <!-- Proveedor del add-in -->
  <ProviderName>ChevyplanIT</ProviderName>

  <!-- Configuración regional por defecto -->
  <DefaultLocale>es-ES</DefaultLocale>

  <!-- Nombre para mostrar -->
  <DisplayName DefaultValue="Evoex" />

  <!-- Descripción del add-in -->
  <Description DefaultValue="Evoex - Asistente de IA para Excel con Azure OpenAI"/>

  <!-- URL del icono del add-in (128x128) -->
  <IconUrl DefaultValue="https://evoexia.0hidyn.easypanel.host/assets/icon-80.png"/>
  <HighResolutionIconUrl DefaultValue="https://evoexia.0hidyn.easypanel.host/assets/icon-80.png"/>

  <!-- URL de soporte -->
  <SupportUrl DefaultValue="https://evoexia.0hidyn.easypanel.host/taskpane.html"/>

  <!-- Dominios permitidos -->
  <AppDomains>
    <AppDomain>https://evoexia.0hidyn.easypanel.host</AppDomain>
  </AppDomains>

  <!-- Hosts soportados - Solo Excel -->
  <Hosts>
    <Host Name="Workbook"/>
  </Hosts>

  <!-- Requisitos de la API -->
  <Requirements>
    <Sets>
      <Set Name="ExcelApi" MinVersion="1.1"/>
    </Sets>
  </Requirements>

  <!-- Configuración por defecto del taskpane -->
  <DefaultSettings>
    <SourceLocation DefaultValue="https://evoexia.0hidyn.easypanel.host/taskpane.html"/>
  </DefaultSettings>

  <!-- Permisos requeridos -->
  <Permissions>ReadWriteDocument</Permissions>

  <!-- Overrides para versiones modernas de Office -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">

    <Hosts>
      <Host xsi:type="Workbook">

        <DesktopFormFactor>
          <GetStarted>
            <Title resid="GetStarted.Title"/>
            <Description resid="GetStarted.Description"/>
            <LearnMoreUrl resid="GetStarted.LearnMoreUrl"/>
          </GetStarted>

          <FunctionFile resid="Taskpane.Url"/>

          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <CustomTab id="ExcelAITab">
              <Group id="ExcelAIGroup">
                <Label resid="CommandsGroup.Label"/>
                <Icon>
                  <bt:Image size="16" resid="Icon.16x16"/>
                  <bt:Image size="32" resid="Icon.32x32"/>
                  <bt:Image size="80" resid="Icon.80x80"/>
                </Icon>
                <Control xsi:type="Button" id="TaskpaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonId1</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
              <Label resid="TabLabel"/>
            </CustomTab>
          </ExtensionPoint>

        </DesktopFormFactor>

      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://evoexia.0hidyn.easypanel.host/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://evoexia.0hidyn.easypanel.host/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://evoexia.0hidyn.easypanel.host/assets/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="GetStarted.LearnMoreUrl" DefaultValue="https://evoexia.0hidyn.easypanel.host/taskpane.html"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://evoexia.0hidyn.easypanel.host/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GetStarted.Title" DefaultValue="Evoex"/>
        <bt:String id="TabLabel" DefaultValue="Evoex"/>
        <bt:String id="CommandsGroup.Label" DefaultValue="Evoex"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Abrir Evoex"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="GetStarted.Description" DefaultValue="Asistente de IA para analizar datos y generar fórmulas."/>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Abre el panel de chat con Azure OpenAI"/>
      </bt:LongStrings>
    </Resources>

  </VersionOverrides>

</OfficeApp>
